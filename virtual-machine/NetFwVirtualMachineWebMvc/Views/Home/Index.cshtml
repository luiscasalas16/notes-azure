<div class="text-center">
    <h1 class="display-4">NetFw Virtual Machine Web Mvc</h1>
    <div class="row">
        <div class="col">
            MACHINE_NAME : @(Environment.MachineName ?? "null")
        </div>
    </div>
    <div class="row">
        <div class="col">
            USER  : @(Environment.GetEnvironmentVariable("USER ") ?? "null")
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button id="tests" type="button" class="btn btn-primary">tests</button>
            <button id="api" type="button" class="btn btn-primary">api</button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var baseUrl = "@VirtualPathUtility.ToAbsolute("~/")";

        function error() {
            console.error(response);
            alert("error");
        }

        $("#tests").click(function () {
            console.log("tests");

            $.ajax(
            {
                type: 'POST',
                dataType: 'json',
                url: baseUrl + 'Home/Tests',
                success:
                    function (response) {
                        console.log(response);
                        alert(response.result);
                    },
                error: error
            });
        });

        $("#api").click(function () {
            console.log("api");

            window.open(baseUrl + 'api/User', '_blank');
        });
    });
</script>