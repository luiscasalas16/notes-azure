<div class="text-center">
    <h1 class="display-4">Net Base Web Mvc</h1>
    <div class="row">
        <div class="col">
            <p>Net Base Web Mvc</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button id="tests" type="button" class="btn btn-primary">Tests</button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var baseUrl = "@Url.Content("~/")";

        $("#tests").click(function () {
            console.log("tests");

            $.ajax(
            {
                type: 'POST',
                dataType: 'json',
                url: baseUrl + 'Home/tests',
                success: (response) => {
                    console.log(response);
                    alert(response.result);
                },
                error: () => {
                    console.error(response);
                    alert("error");
                }
            });
        });
    });
</script>